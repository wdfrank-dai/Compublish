@model ComPublishWeb.Areas.AffairsAdmin.Models.AffairsModel
@{ 
    ViewBag.Title = "ShowAffairsReadOnly";
    Layout = "~/Views/Shared/M/_LayoutAffairs.cshtml";
}

       <h2   class="title">  事务详细信息(事务名称:
