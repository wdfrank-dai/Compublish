@using Telerik.Web.Mvc.UI
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutRole.cshtml";
}
<div class="bigbox">
<h2>用户第三方应用</h2>
<div>
@(Html.Telerik().Grid<WiGetMS.Models.showApplication>()
          .Name("AppOfUserGrid")
          .DataKeys(keys =>
           {
              keys.Add(c => c.id);
           })
    
          .DataBinding(dataBinding =>
              {
                  dataBinding.Ajax()
                   .Select("GetAllAppOfUser", "ApplicationManage");
              }) 
          .Columns(columns =>   
          {
              columns.Bound(c => c.id).Hidden(true);    
              columns.Bound(c => c.Appname).Width(95);
              columns.Bound(c => c.Note).Width(140);
              columns.Bound(c => c.Logourl).Width(190);
              columns.Bound(c => c.Lastmodifytime).Width(130);
              columns.Bound(c => c.Publishto).Width(120);
              columns.Bound(c => c.Ispublishstring).Width(90);
			  columns.Bound(c => c.ShowTypes).Width(90);
			  columns.Bound(c => c.IfLoginShows).Width(90);
              columns.Bound(c => c.Tags).Width(150);
              columns.Bound(c => c.Passed).Width(130);
              columns.Bound(c => c.Appname)
                .ClientTemplate("<input type='button' value='删除' class='t-button' onclick='deleteapps(<#= id#>)' />").Title("操作").Width(100);
          })
         .Pageable(paging => paging.PageSize(8))
         .Scrollable(scrolling => scrolling.Height(240))
		 .Resizable(resizing => resizing.Columns(true))
		 .Reorderable(reorder => reorder.Columns(true)) 
         .Sortable()
         .Selectable()
         .Filterable()
         .ClientEvents(events => events.OnRowSelect("onRowSelected"))
          )
</div>

<h2>数据源管理</h2>
<div>
@{
    Html.Telerik().Grid<WiGetMS.Models.Datasource>()
          .Name("DSGrid")
          .DataKeys(keys =>
          {
              keys.Add(c => c.id);
          })

           .ToolBar(commands => commands.Template("<a type ='button' value='添 加' class='t-button' onclick = Add()><b>添   加</b></a>"))
          
          .DataBinding(dataBinding => dataBinding.Ajax()
                .Select("Datasource", "DataSource")
                )
          
          .Columns(columns =>
          {
              columns.Bound(o => o.id).Hidden(true);
              columns.Bound(c => c.dsname).Width(135);
              columns.Bound(c => c.unitsname).Width(135);
              columns.Bound(c => c.dsurl).Width(140);
              columns.Bound(c => c.dsparams).Width(125);
              columns.Bound(c => c.dataitems).Width(130);
              columns.Bound(c => c.isefficetive).ClientTemplate("<input type='text' readonly='readonly'    name='isefficetive' <#= isefficetive?  \"value='是'  style=' width:60px;  text-align:center; border-style:none; border-width:0px; color:Blue ;' \" : \"value='否'  style=' width:60px; text-align:center;  border-style:none; border-width:0px; color:Red ;'\" #> />").Width(90); ;
              columns.Bound(c => c.modifydate).Width(130);
              columns.Bound(c => c.operators).Width(125);
              columns.Bound(c => c.Add)
                  .ClientTemplate("<a type ='button' value='修 改' class='t-button' onclick = Edit(<#= id #>) >修 改</a> <a type ='button' value='删 除' class='t-button' onclick = Delete(<#= id #>) >删 除</a>")
                  .Title("操 作").Width(200);
          })
          .Editable(editing => editing.Mode(GridEditMode.PopUp))
          .Pageable(paging => paging.PageSize(10))
          .Scrollable(scrolling => scrolling.Height(320))
          .Sortable()
          .Filterable()
          .Resizable(resizing => resizing.Columns(true))
          .Reorderable(reorder => reorder.Columns(true))          
          .Footer(true)
          .Render();
          }
</div>
<div>
 @{       
    Html.Telerik().Window()
      .Name("AddDataWindow")    
      .Title("添加数据元")
      .Draggable(true)
      .Height(340)
      .Width(300)
      .Resizable(resizing => resizing
        .Enabled(true)
        .MinHeight(400)
        .MinWidth(700)
        .MaxHeight(400)
        .MaxWidth(700)
        )
      .Scrollable(true)
      .Modal(true)
      .Buttons(b => b.Maximize().Close())
      .Visible(false)
      .Render();
   } 

    @{       
    Html.Telerik().Window()
      .Name("EditDataWindow")    
      .Title("修改数据元")
      .Draggable(true)
      .Height(340)
      .Width(300)
      .Resizable(resizing => resizing
        .Enabled(true)
        .MinHeight(400)
        .MinWidth(700)
        .MaxHeight(400)
        .MaxWidth(700)
        )
      .Scrollable(true)
      .Modal(true)
      .Buttons(b => b.Maximize().Close())
      .Visible(false)
      .Render();
   } 
</div>
</div>
   @section Footer{

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {

        });

		var Appid = 0;
        function onRowSelected(e) {
            var DSGrid = $('#DSGrid').data('tGrid');
            var AppID = e.row.cells[0].innerHTML;
            Appid = AppID;
            DSGrid.rebind({
                appid: AppID
            });
        }

        function Add() {
			
            var window = $('#AddDataWindow').data('tWindow');
            window.ajaxRequest("/WidgetAdmin/DataSource/AddData");
            window.center().open();
        }

        function AddWindowForDataSource(data) {
            if (data != "")
                alert("添加成功！");
            else
                alert(data);
            $('#AddDataWindow').data('tWindow').close();
            var grid = $('#DSGrid').data('tGrid'); //重新加载
            grid.rebind();
            //autodisapear();     
        }

        function Edit(id) {
            var window = $('#EditDataWindow').data('tWindow');
            window.ajaxRequest("/WidgetAdmin/DataSource/EditData?confid=" + id);
            window.center().open();
        }

        function EditWindow() {
                alert("修改成功");
            $('#EditDataWindow').data('tWindow').close();
            var grid = $('#DSGrid').data('tGrid'); //重新加载
            grid.rebind();
           
        }

        function Delete(id) {
            if (!confirm("你确定要删除该第三方应用吗？"))
                return;
            $.ajax({
                type: "post",
                url: '@Url.Action("DeleteData","DataSource",new {Areas = "WidgetAdmin"})',
                cache: false,
                data: "dataid=" + id,
                datatype: "html",
                success: function () {
                        alert("删除成功");
                var grid = $('#DSGrid').data('tGrid'); //重新加载
                grid.rebind();
                }
            })
        }

        function Close() {
            $('#EditDataWindow').data('tWindow').close();
        }
        
        function Close1() {
            $('#AddDataWindow').data('tWindow').close();
        }

    </script>
    }