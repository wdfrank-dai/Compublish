				</button>
                <span class="text_button_padding"> </span>
				 
                 <button class="button" type="button" onclick="ClosePageWindow()">
				<img src="@Url.Content("~/images/icons/close.png")" alt="Save" />
				取消
				</button>
        </div>
}

