    <script type="text/javascript">
        var nowroleid;
        $(document).ready(function () {
            $("#PersonSequenceSubmit").attr('disabled', true);

//            $("#checkedall").click(function () {
//                if ($("#checkedall").attr("checked")) {
//                    $(":checkbox:visible").not("#checkedall").attr("checked", true);
