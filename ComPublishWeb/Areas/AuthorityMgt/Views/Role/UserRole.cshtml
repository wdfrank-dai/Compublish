       function selectUserWithRole() {
        $("#UserGrid").data("tGrid").rebind(
          {
              UserID: $("#UserID").val(),
              UserName: $("#UserName").val(),
              DepName: $("#DepName").val(),
              DepSectionName: $("#DepSectionName").val(),
              roleid: $("input#hidden:hidden").attr("value")
