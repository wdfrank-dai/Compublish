@model ComPublishWeb.Models.LogOnModel

@{
    ViewBag.Title = "LogOn";
    Layout = "~/Views/Shared/M/_Layout.cshtml";
}

<div data-theme="b">

<h2>用户登录</h2>

@Html.ValidationSummary(true, "登录失败，请确认帐号密码是否正确，并重新输入。")
<div data-role="fieldcontain">
@using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "form login" }))
{            
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { required="required",placeHolder="User Name"})
                @Html.ValidationMessageFor(m => m.UserName)
                <br />
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { required = "required", placeHolder = "Password" })
                @Html.ValidationMessageFor(m => m.Password)

                <br />
               
           @Html.CheckBoxFor(m=>m.RememberMe)
           @Html.LabelFor(m=>m.RememberMe)
          <input type="submit" value="登录" />
  
}
</div>
</div>
@section scripts
{
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
